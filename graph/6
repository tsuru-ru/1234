#include <iostream>

using namespace std;





int main()
{   int size = 10; 

int FIKS[size]; // проход
int MIN_WEG[size]; // текущие расстояния 
int VON_PUNKT[size]; // номера вершин пути из А в В
int DUG[size][size]; // длины между дугами

    int A = 1;
    int min_ = 100000;
    int min_index = 10000;
    int temp; 
    
    for (int i = 0; i < size; i++){
        DUG[i][i] = 0;
        for (int j = i + 1; j < size; j++) {
            printf("Введите расстояние %d - %d: ", i + 1, j + 1);
            scanf("%d", &temp);
            DUG[i][j] = temp;
            DUG[j][i] = temp;
            
        }
        
    }

    do{for(int i = 0; i < size; i++){
        FIKS[i] = 0;
        VON_PUNKT[size] = A;
        for(int j = 0; j < size; j++){
            MIN_WEG[i] = DUG[i][j];
        }
        FIKS[i] = 1; 
        VON_PUNKT[i] = 0;
    }
    
    
    for(int i = 0; i < size; i++){
        if (FIKS[i] != 1 and MIN_WEG[i] < min_){
            min_ = MIN_WEG[i];
            min_index = i;
        }
        
        }
    
    if (min_index != 10000){
            for(int i = 0; i<size;i++){
                if (DUG[min_index][i] > 0 ){
                    temp = min_ + DUG[min_index][i];
                    if (temp < MIN_WEG[i]){
                        MIN_WEG[i] = temp;
                    }
                }
            }
    }
    FIKS[min_index] = 0;
        
    }while(min_index<10000);
    
    return 0;
}
